{
    "Comment": "A description of my state machine",
    "StartAt": "getFilmData",
    "States": {
      "getFilmData": {
        "Type": "Task",
        "Resource": "${getFilmDataFunctionArn}",
        "Retry": [
          {
            "ErrorEquals": ["Lambda.ServiceException", "Lambda.AWSLambdaException", "Lambda.SdkClientException", "Lambda.TooManyRequestsException"],
            "IntervalSeconds": 1,
            "MaxAttempts": 3,
            "BackoffRate": 2
          }
        ],
        "Next": "processCharacter"
      },
      "processCharacter": {
        "Type": "Task",
        "Resource": "${processCharactersFunctionArn}",
        "Retry": [
          {
            "ErrorEquals": ["Lambda.ServiceException", "Lambda.AWSLambdaException", "Lambda.SdkClientException", "Lambda.TooManyRequestsException"],
            "IntervalSeconds": 1,
            "MaxAttempts": 3,
            "BackoffRate": 2
          }
        ],
        "Next": "selectPlanet"
      },
      "selectPlanet": {
        "Type": "Task",
        "Resource": "${selectPlanetFunctionArn}",
        "Retry": [
          {
            "ErrorEquals": ["Lambda.ServiceException", "Lambda.AWSLambdaException", "Lambda.SdkClientException", "Lambda.TooManyRequestsException"],
            "IntervalSeconds": 1,
            "MaxAttempts": 3,
            "BackoffRate": 2
          }
        ],
        "Next": "generateCode"
      },
      "generateCode": {
        "Type": "Task",
        "Resource": "${generateCodeFunctionArn}",
        "Retry": [
          {
            "ErrorEquals": ["Lambda.ServiceException", "Lambda.AWSLambdaException", "Lambda.SdkClientException", "Lambda.TooManyRequestsException"],
            "IntervalSeconds": 1,
            "MaxAttempts": 3,
            "BackoffRate": 2
          }
        ],
        "End": true
      }
    }
  }
  